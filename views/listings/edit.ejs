<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="mt-3">Edit your listing</h3>
      <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
        <div class="mb-3">
          <label for="title" form="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="description" form="form-label">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
          >
<%= listing.description %></textarea
          >
        </div>

        <div class="mb-3">
          <label for="image" form="form-label">Image link</label>
          <input
            type="text"
            name="listing[image]"
            value="<%= listing.image %>"
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" form="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              class="form-control"
            />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" form="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
              class="form-control"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" form="form-label">Enter Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            class="form-control"
          />
        </div>

        <button class="btn btn-dark mb-3 edit-btn">Edit</button>
      </form>
    </div>
  </div>
</body>
