<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="mt-3">Create a New Listing</h3>
      <form action="/listings" method="post">
        <div class="mb-3">
          <label for="title" form="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add Catchy title"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="description" form="form-label">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="image" form="form-label">Image link</label>
          <input
            type="text"
            name="listing[image]"
            placeholder="Image LINK/URL"
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" form="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              placeholder="1200"
              class="form-control"
            />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" form="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" form="form-label">Enter Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Baramulla, Srinagar, Sopore"
            class="form-control"
          />
        </div>

        <button class="btn btn-dark mb-3 add-btn">ADD</button>
      </form>
    </div>
  </div>
</body>
